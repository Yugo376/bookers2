<div class="profile-container">
  <h3>User info</h3>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <h3 class="profile-name">name. <%= current_user.name %></h3>
  <h3 class = "introduction"><%= current_user.introduction %></h3>


<div class="btn btn-outline-secondary btn-block">
  <%= link_to edit_user_path(current_user.id), method: :get do%>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

</div>



<h2>New book</h2>



<%= form_with model: book ,url: '/books', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>


    <%= f.submit "Create Book" %>

<% end %>